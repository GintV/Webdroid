<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@mipmap/static_qr_code_without_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <SurfaceView
        android:layout_width="216dp"
        android:layout_height="384dp"
        android:id="@+id/camera_view"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="216dp"
        android:layout_height="84dp"
        android:id="@+id/textView38"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/camera_view"
        android:layout_alignLeft="@+id/camera_view"
        android:layout_alignStart="@+id/camera_view" />

    <TextView
        android:layout_width="216dp"
        android:layout_height="84dp"
        android:id="@+id/textView39"
        android:background="#000000"
        android:layout_alignBottom="@+id/camera_view"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:id="@+id/imageViewTop"
        android:src="@mipmap/static_qr_code_without_logo_top"
        android:layout_alignBottom="@+id/textView38"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:id="@+id/imageViewBottom"
        android:src="@mipmap/static_qr_code_without_logo_bottom"
        android:layout_alignTop="@+id/textView39"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QR Code Scanner"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:id="@+id/textView40"
        android:layout_above="@+id/camera_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_info"
        android:textSize="20sp"
        android:text="Scan QR code."
        android:layout_gravity="bottom"
        android:layout_margin="40dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>